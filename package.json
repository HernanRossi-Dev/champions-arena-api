{
  "name": "champions-arena-api",
  "version": "3.0.0",
  "description": "A Pathfinder character creation and campaign companion",
  "private": true,
  "scripts": {
    "docker-deploy": "docker-compose up",
    "start": "set NODE_ENV=production&& node -r dotenv/config ./dist/server.js",
    "start-dev": "set NODE_ENV=development&& node -r dotenv/config ./dist/server.js",
    "start-dev-win": "set NODE_ENV=development & node -r dotenv/config ./dist/server.js",
    "build": "tsc",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles --runInBand",
    "test-user": "jest --forceExit --coverage --verbose --detectOpenHandles --runInBand test/component/user-api.spec.ts",
    "test-char": "jest --forceExit --coverage --verbose --detectOpenHandles --runInBand test/component/character-api.spec.ts",
    "view:coverage": "serve coverage/lcov-report"
  },
  "engines": {
    "node": "14.x.x"
  },
  "author": "Hernan Rossi",
  "license": "ISC",
