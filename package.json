{
  "name": "champions-arena-api",
  "version": "3.0.0",
  "description": "A Pathfinder character creation and campaign companion",
  "private": true,
  "type": "module",
  "scripts": {
    "docker-deploy": "docker-compose up",
    "start": "set NODE_ENV=production&& node ./src/app.js",
    "start-dev": "set NODE_ENV=development&& node ./src/app.js",
    "start-dev-win": "set NODE_ENV=development & node ./src/app.js",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "test": "jest --coverage",
    "view:coverage": "serve coverage/lcov-report"
  },
  "engines": {
    "node": "14.x.x"
  },
  "author": "Hernan Rossi",
  "license": "ISC",
