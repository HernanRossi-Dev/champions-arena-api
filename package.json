    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "auth0-api-jwt-rsa-validation": "0.0.3",
    "axios": "^0.19.2",
    "babel-jest": "^26.0.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.3",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "express-jwt": "^5.3.1",
    "generate-password": "^1.4.0",
    "helmet": "^3.22.0",
    "hover": "^3.0.0-alpha.6",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.2.1",
    "jwks-rsa": "^1.8.0",
